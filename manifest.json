{
  "manifest_version": 3,
  "name": "Google Result Blocker",
  "version": "0.1.0",
  "description": "Visually filters Google Search results with user-defined rules.",
  "permissions": ["storage"],
  "host_permissions": ["*://www.google.*/*", "*://google.*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Result Blocker"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://www.google.*/*", "*://google.*/*"],
      "js": ["utils.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
